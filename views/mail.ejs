<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beautiful Table with Copy Icons</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>

        .table-container {
            width: 100%;
            max-width: 1200px;
            overflow-x: auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: linear-gradient(135deg, #2c3e50, #34495e);
            color: #fff;
            font-weight: 500;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #e8f4f8;
            transition: background-color 0.2s ease;
        }

        td {
            color: #333;
             position: relative;
            align-items: center;
            justify-content: space-between;
        }

        td span {
            font-size: 14px;
        }

        .copy-icon {
            cursor: pointer;
            width: 16px;
            height: 16px;
            fill: #666;
            transition: fill 0.2s ease;
            margin-left: 10px;
        }

        .copy-icon:hover, .loader-icon:hover {
            fill: #2c3e50;
        }

        .loader-icon {
            cursor: pointer;
            margin-right: 10px;
            position: relative;
            top: 5px;
        }

        .tooltip {
            position: absolute;
            background: #2c3e50;
            color: #fff;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            top: -30px;
            display: none;
            right: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
            z-index: 20;
        }

        .tooltip.show {
            display: flex;
            opacity: 1;
        }

        .loader-icon.rotate {
            animation: rotate 1s linear infinite;
        }

        .login-btn {
            background-color: #f05326;
            color: white;
            border: none;
            font-size: 14px;
            cursor: pointer;
            border-radius: 10px;
            line-height: 0;
            padding: 15px 10px;
            height: 0;
            transition: all 0.3s;
        }

        .login-btn:hover {
            background-color: #ff6f00;
        }
            
        @keyframes rotate {
            from {
              transform: rotate(360deg);
            }
            to {
              transform: rotate(0deg);
            }
          }
            
        @media (max-width: 768px) {
            .table-container {
                overflow-x: auto;
            }
            table {
                min-width: 800px;
            }
            td {
                padding: 12px 10px;
            }
            .copy-icon {
                width: 14px;
                height: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="table-container" id="mailTable">
        <table>
            <thead class="mail-thead">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Login</th>
                    <th>Code</th>
                </tr>
            </thead>
            <tbody class="mail-tbody" id="mailTbody">

            </tbody>
        </table>
    </div>

    <script>
        function copyToClipboard(element) {
            // Get the text content from the <span> sibling
            const text = element.previousElementSibling.textContent;
            // Copy to clipboard
            navigator.clipboard.writeText(text).then(() => {
                // Show tooltip
                const tooltip = element.nextElementSibling;
                tooltip.classList.add('show');
                // Hide tooltip after 1 second
                setTimeout(() => {
                    tooltip.classList.remove('show');
                }, 1000);
            }).catch(err => {
                console.error('Failed to copy: ', err);
            });
        }
    </script>
</body>
</html>